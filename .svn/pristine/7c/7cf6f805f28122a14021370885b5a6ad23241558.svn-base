.navbar-fixed-top {
    background: black; /* For browsers that do not support gradients */
    background: -webkit-linear-gradient(left, white , black); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(right, white, black); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(right, white, black); /* For Firefox 3.6 to 15 */
    background: linear-gradient(to right, white , black); /* Standard syntax (must be last) */ 
    height:51px
}

  
    .fontA {
        color: maroon;
        margin: 0;
        padding-right: 0;
        font-family: 'Antic', sans-serif;
    }
    .fontB {
        color: black;
        margin: 0;
        padding-left: 0
    }

    .fontC {
        color: maroon;
        margin: 0;
        font-size: 15px;
        padding-left: 0;
        font-family: 'Julius Sans One', sans-serif;
    }

    .fontD {
        padding-left: 0;
        font-family: 'Electrolize', sans-serif;
    }

    .wrap img {
        position: absolute;
        bottom: 0;
        padding-bottom: 10px;
    }

    .wrap img:nth-of-type(1) {
        left: 0;
        height: 80px;
        width: 80px;
    }

    .wrap img:nth-of-type(2) {
        right: 0;
        height: 80px;
        width: 90px;
        padding-right: 5px;
    }

  div.xhelper {
    /*height: 400px;*/
    min-height: 400px;
    width: 400px;
    border-style: inset;
    border-width: 2px;
    border-color: black;
    -webkit-transform: perspective( 300px ) rotateY( 25deg );
    -moz-transform: perspective( 300px ) rotateY( 25deg );
    -ms-transform: perspective( 300px ) rotateY( 25deg );
    -o-transform: perspective( 300px ) rotateY( 25deg );
    transform: perspective( 300px ) rotateY( 25deg );
   }
  
  @media only screen and (max-width:479px) {
      div.xhelper{ width: 90%;height: 150%;}
      .wrap img { width: 90%;}
      .fontA { width: 90%;}
      .fontB { width: 90%;}
      .fontC { width: 90%;}
      .fontD { width: 90%;}
  }