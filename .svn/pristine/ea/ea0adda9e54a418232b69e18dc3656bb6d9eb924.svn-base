@{
    ViewBag.Title = "Home Page";
}
<br/>
<br/>
<br/>
<br/>

<div style="font-family: inherit;">
    <style type="text/css">
        .helper {
            font-family: Comic Sans Gabriola;
            height: 350px;
            width: 400px;
            border-style: solid;
            border-width: 2px;
            border-color: royalblue;
            -ms-transform: skewY(8deg); /* IE 9 */
            -webkit-transform: skewY(8deg); /* Safari */
            transform: skewY(8deg); /* Standard syntax */
        }

        .fontA {
            color: maroon;
            margin: 0;
            padding-right: 0

        }
        .fontB {
            color: black;
            margin: 0;
            padding-left: 0
        }

        .fontC {
            color: black;
            margin: 0;
            font-size: 15px;
            padding-left: 0
        }

        .fontD {
            padding-left: 0
        }

        .wrap img {
            position: absolute;
            bottom: 0;
            padding-bottom: 10px;
        }

        .wrap img:nth-of-type(1) {
            left: 0;
            height: 50px;
            width: 50px;
        }

        .wrap img:nth-of-type(2) {
            right: 0;
            height: 60px;
            width: 70px;
            padding-right: 5px;
        }
       
        .user-form { padding:10px; }
    </style>

</div>

<form class="helper">
    <div class="form-group">
        <h2 style="text-align: center">
            <label class="fontA">XposLIMS</label>
            <label class="fontB">&trade;</label>
        </h2>
        <div class="fontD" align="center">
            <h5><label>Version 1.0.00</label></h5>
            <h4 style="height: 30px; background-color: #337ab7; color: #FFFFFF; text-align: center; font-family: 'CopperPlate'"> Laboratory Information Management System</h4>
        </div>

        <div class="fontD" align="right">
            <img src="~/Images/PSL.png" height="60" width="160" alt="Proudly Sierra Leonean"/>
        </div>

        <br />
        <br/>

        <div class="fontD" align="center">
            <h4 style="text-align: center"> Licensed to: Sierra Rutile Limited</h4>
        </div>
        
        <div class="wrap">
            <img src="~/Images/InstitutionLogo.png" />
            <img src="~/Images/xpos_logo.png" />
        </div>
        @*<div align="center">
            <div class="wrap">
                <img src="~/Images/InstitutionLogo.png" />
                <img src="~/Images/xpos_logo.png" />
            </div>
        </div>*@
    </div>
    
</form>
